                                 </tr>
                                 <!--  <tr>
                                    <th scope="row"></th>
                                    <td>Realized Proceeds</td>
                                    <td>{{.Investment.RealizedProceeds}}</td>
                                    </tr> -->
                              </tbody>
                           </table>
                        </div>
                     </div>
               </div>
            </div>
               <div class="overview__inner">
                  <div class="overview-box clearfix">
                     <div class="table-responsive-md">
                        <table class="table table-striped">
                           <tbody>
                              <tr>
                                 <th scope="row"></th>
                                 <td>Enterprise Value at Closing</td>
                                 <td>{{.Investment.ExitValueAtClosing | currencyFormat}}</td>
                              </tr>
                              <tr>
                                 <th scope="row"></th>
                                 <td>Fund Ownership</td>
                                 <td>{{.Investment.FundOwnershipPercentage}}%</td>
                              </tr>
                              <tr>
                                 <th scope="row"></th>
                                 <td>Investor Group Ownership</td>
                                 <td>{{.Investment.InvestorGroupPercentage}}%</td>
                              </tr>
                              <tr>
                                 <th scope="row"></th>
                                 <td>Management Ownership</td>
                                 <td>{{.Investment.ManagementOwnership}}%</td>
                              </tr>
                              <tr>
                                 <th scope="row"></th>
                                 <td>Reported Value</td>
                                 <td>{{.Investment.ReportedValue | currencyFormat}}</td>
                              </tr>
                              <tr>
                                 <th scope="row"></th>
                                 <td>Investment Multiple</td>
                                 <td>{{.Investment.InvestmentMultiple}}x</td>
                              </tr>
                              <tr>
                                 <th scope="row"></th>
                                 <td>Gross IRR(All Security Types)</td>
                                 <td>{{.Investment.GrossIRR}}%</td>
                              </tr>
                           </tbody>
                        </table>
                     </div>
                  </div>
               </div>
            </div>
         {{if .Investment.Description }}
