         {{if .ExistingNews}}
         <div class="card-group">
            <div class="card mb-3" style="max-width: 100rem;">
               <div class="card-body">
                  <h5 class="card-title">
                     Investor Updates
                  </h5>
                  <p class="card-text">
                  <div class="table-responsive-md">
                     <table class="table table-sm">
                        <thead>
                           <tr>
                              <th scope="col">Reporting Date</th>
                              <th scope="col">Investment Status</th>
                           </tr>
                        </thead>
                        <tbody>
                           {{range .ExistingNews}}
                           <tr>
                              <td>{{.FormattedNewsDate}}</td>
                              <td>
                                 {{ if eq "PERFORMANCE_BELOW_TARGET" .Status }}
                                 <i class="fa fa-circle" style="font-size:48px;color:#ffc107"></i>
                                 {{ end }}
                                 {{ if eq "PERFORMANCE_ON_TARGET" .Status }}
                                 <i class="fa fa-circle" style="font-size:48px;color:#6c757d"></i>
                                 {{ end }}
                                 {{ if eq "PERFORMANCE_ABOVE_TARGET" .Status }}
                                 <i class="fa fa-circle" style="font-size:48px;color:#28a745"></i>
                                 {{ end }}
                                 {{ if eq "POOR_PERFORMANCE" .Status }}
                                 <i class="fa fa-circle" style="font-size:48px;color:#dc3545"></i>
                                 {{ end }}
                                 {{ if eq "ACQUIRED_OR_SOLD" .Status }}
                                 <i class="fa fa-circle" style="font-size:48px;color:#17a2b8"></i>
                                 {{ end }}
                              </td>
                              <td>
                                 <div id="collapse{{.ID}}" class="collapse">
                                    <p class="card-text">
                                       {{ .News | safeHTML }}
                                    </p>
                                 </div>
                              </td>
                              <td>
                                 <div class="table-data-feature">
                                    <a class="item" data-toggle="collapse" href="#collapse{{.ID}}" role="button" aria-expanded="false" aria-controls="collapse{{.ID}}" title="More">
                                    <i class="zmdi zmdi-more"> </i></a>
                                 </div>
                              </td>
                           </tr>
                           {{end}}
                        </tbody>
                     </table>
                  </div>
                  </p>
               </div>
            </div>
         </div>
         {{end}}
         
         {{if .ExistingInvestmentStructures}}
         <div class="card-group">
            <div class="card mb-3" style="max-width: 100rem;">
               <div class="card-body">
                  <h5 class="card-title">
                     Investment Structure
                  </h5>
                  <p class="card-text">
                  <div class="table-responsive-md">
                     <table class="table table-sm">
                        <thead>
                           <tr>
                              <th scope="col">Reporting Date</th>
                              <th scope="col">Investment Structure</th>
                              <th scope="col">Units/Par</th>
                              <th scope="col">Total Invested</th>
                              <th scope="col">Reported Value</th>
                              <th scope="col">Realized Proceeds</th>
                           </tr>
                        </thead>
                        <tbody>
                           {{range .ExistingInvestmentStructures}}
                           <tr>
                              <th scope="row">{{.FormattedReportingDate}}</th>
                              <td>{{.Structure}}</td>
                              <td>{{.Units}}</td>
                              <td>{{.TotalInvested | currencyFormat}}</td>
                              <td>{{.ReportedValue | currencyFormat}}</td>
                              <td>{{.RealizedProceeds | currencyFormat}}</td>
                           </tr>
                           {{end}}
                        </tbody>
                     </table>
                  </div>
                  </p>
               </div>
            </div>
         </div>
         {{end}}
         {{if .Existing}}
         <div class="card-group">
            <div class="card mb-3" style="max-width: 100rem;">
               <div class="card-body">
                  <h5 class="card-title">Financial Results</h5>
                  <p class="card-text">
                  <div class="table-responsive-md">
                     <table class="table table-sm">
                        <thead>
                           <tr>
                              <th scope="col">Reporting Date</th>
                              <th scope="col">Revenue</th>
                              <th scope="col">YOY % Growth</th>
                              <th scope="col">LTM EBITDA</th>
                              <th scope="col">YOY % Growth</th>
                              <th scope="col">EBITDA Margin</th>
                              <th scope="col">Total Enterprise Value</th>
                              <th scope="col">Total Enterprise Value Multiple</th>
                              <th scope="col">Total Leverage</th>
                              <th scope="col">Total Leverage Multiple</th>
                           </tr>
                        </thead>
                        <tbody>
                           {{range .Existing }}
                           <tr>
                              <td>{{.FormattedReportingDate}}</td>
                              <td>{{.Revenue | currencyFormat}}</td>
                              <td>{{.YoYGrowthPercentage1}}%</td>
                              <td>{{.LTMEBITDA | currencyFormat}}</td>
                              <td>{{.YoYGrowthPercentage2}}%</td>
                              <td>{{.EBITDAMargin}}%</td>
                              <td>{{.TotalExitValue | currencyFormat}}</td>
                              <td>{{.TotalExitValueMultiple}}</td>
                              <td>{{.TotalLeverage | currencyFormat}}</td>
                              <td>{{.TotalLeverageMultiple}}</td>
                           </tr>
                           {{end}}
                        </tbody>
                     </table>
                  </div>
                  </p>
               </div>
            </div>
         </div>
         {{end}}
         {{if .ExistingCapitalStructures}}
         <div class="card  mb-3" style="max-width: 100rem;">
            <div class="card-body">
               <h5 class="card-title">
                  Capitalization Structure
               </h5>
               <p class="card-text">
               <div class="table-responsive-md">
                  <table class="table table-sm">
                     <thead>
                        <tr>
                           <th scope="col">Reporting Date</th>
                           <th scope="col">Capitalization</th>
                           <th scope="col">Closing</th>
                           <th scope="col">Year End Value</th>
                        </tr>
                     </thead>
                     <tbody>
                        {{range .ExistingCapitalStructures}}
                        <tr>
                           <th scope="row">{{.FormattedReportingDate}}</th>
                           <td>{{.Capitalization}}</td>
                           <td>{{.ClosingValue | currencyFormat}}</td>
                           <td>{{.YearEndValue | currencyFormat}}</td>
                        </tr>
                        {{end}}
                     </tbody>
                  </table>
               </div>
               </p>
            </div>
         </div>
         {{end}}
         <div class="row m-t-25">
            <div class="col-sm-6 col-lg-6">
                  <div class="overview__inner"><h5 class="card-title">
                  Investment Summary
               </h5>
                     <div class="overview-box clearfix">
                        <div class="table-responsive-md">
                           <table class="table table-striped">
                              <tbody>
                                 <tr>
                                    <th scope="row"></th>
                                    <td>Invested From</td>
                                    <td>{{.Investment.FundLegalName}}</td>
                                 </tr>
                                 <tr>
                                    <th scope="row"></th>
                                    <td>Investment Date</td>
