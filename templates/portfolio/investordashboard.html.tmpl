<!-- Fund I-->
<section class="jumbotron text-center">
   <div class="container">
      {{.CurrentUser.Email}} 
      <h1 class="jumbotron-heading">
         Welcome To Investor Dashboard
      </h1>
   </div>
</section>
<p class="lead text-muted"></p>
<div class="row m-t-25">
   <div class="col-sm-6">
      {{if .DisplayPieChart}}
      <div class="au-card m-b-10">
         <div class="au-card-inner">
            <h3 class="title-2 m-b-20">Investor Contribution</h3>
            <canvas id="CapitalContributionPieChart"></canvas>
         </div>
      </div>
      {{else}}
      {{range .Contributions}}
      <div class="overview-item overview-item--c3">
         <div class="overview__inner">
            <div class="overview-box clearfix">
               <div class="icon">
                  <i class="zmdi zmdi-money"></i>
               </div>
               <div class="text">
                  <h2>{{.InvestmentAmount}}</h2>
                  <span>Investor Contribution</span></br>
               </div>
            </div>
            <div class="overview-box clearfix">
               <div class="text">
                  <h2>{{.FundLegalName}}</h2>
                  <span>Fund Name</span>
               </div>
            </div>
            <div class="overview-box clearfix">
               <div class="text">
                  <h2>{{.OwnershipPercentage}}%</h2>
                  <span>Ownership Percentage </span>
               </div>
            </div>
            {{end}}
         </div>
      </div>
      {{end}}
   </div>
   <div class="col-sm-6">
      <div class="overview-item overview-item--c1">
         <div class="overview__inner">
            <div class="overview-box clearfix">
               <div class="text">
                  <h2>3Lines Diversification</h2><span> (Note: Highlight the bars)</span>
               </div>
            </div>
            <div class="overview-chart">
               <canvas id="CapitalInvestmentBarChart"></canvas>
            </div>
         </div>
      </div>
   </div>
</div>
