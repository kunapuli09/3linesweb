{{define "View"}}
<!doctype html>
<html lang="en">
   <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <meta name="description" content="">
      <meta name="author" content="">
      <link rel="icon" href="../../../../favicon.ico">
      <title>{{.Investment.StartupName}}</title>
      <!-- Bootstrap core CSS -->
      <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
      <!-- Custom styles for this template -->
      <link href="css/dashboard.css" rel="stylesheet">
   </head>
   <body>
      <nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
         <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="#">{{.Investment.StartupName}}</a>
         <!-- <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search"> -->
         <ul class="navbar-nav px-3">
            <li class="nav-item text-nowrap">
               <a class="btn btn-sm btn-outline-secondary" href="/portfolio" role="button">Portfolio</a>
               <a class="btn btn-sm btn-outline-secondary" href="/editinvestment?id={{.Investment.ID}}" role="button"> Investment Details</a>
               <a class="btn btn-sm btn-outline-secondary" href="/newinvestmentstructure?Investment_ID={{.Investment.ID}}" role="button"> Investment Structure</a>
               <a class="btn btn-sm btn-outline-secondary" href="/newcapitalstructure?Investment_ID={{.Investment.ID}}" role="button"> Capital Structure</a>
               <a class="btn btn-sm btn-outline-secondary" href="/newfinancials?Investment_ID={{.Investment.ID}}" role="button"> Financial Results</a>
               <a class="btn btn-sm btn-outline-secondary" href="/news?Investment_ID={{.Investment.ID}}" role="button"> News</a>
            </li>
         </ul>
      </nav>
      <div class="container-fluid">
         <div class="card-group">
            <div class="card text-white bg-secondary mb-3" style="max-width: 100rem;">
               <div class="card-header">Header</div>
               <div class="card-body">
                  <h5 class="card-title">Investment Details</h5>
                  <p class="card-text">
                  <div class="table-responsive-md">
                     <table class="table">
                        <tbody>
                           <tr>
                              <th scope="row"></th>
                              <td>Investment Date</td>
                              <td>{{.Investment.InvestmentDate}}</td>
                           </tr>
                           <tr>
                              <th scope="row"></th>
                              <td>Industry</td>
                              <td>{{.Investment.Industry}}</td>
                           </tr>
                           <tr>
                              <th scope="row"></th>
                              <td>Headquarters</td>
                              <td>{{.Investment.Headquarters}}</td>
                           </tr>
                           <tr>
                              <th scope="row"></th>
                              <td>Exit Value at Closing</td>
                              <td>{{.Investment.ExitValueAtClosing}}</td>
                           </tr>
                        </tbody>
                     </table>
                  </div>
                  </p>
               </div>
            </div>
            <div class="card text-white bg-secondary mb-3" style="max-width: 100rem;">
               <div class="card-header"></div>
               <div class="card-body">
                  <h5 class="card-title"></h5>
                  <p class="card-text">
                  <div class="table-responsive-md">
                     <table class="table">
                        <tbody>
                           <tr>
                              <th scope="row"></th>
                              <td>Fund Ownership</td>
                              <td>{{.Investment.FundOwnershipPercentage}}</td>
                           </tr>
                           <tr>
                              <th scope="row"></th>
                              <td>Investor Group Ownership</td>
                              <td>{{.Investment.InvestorGroupPercentage}}</td>
                           </tr>
                           <tr>
                              <th scope="row"></th>
                              <td>Management Ownership</td>
                              <td>{{.Investment.ManagementOwnership}}</td>
                           </tr>
                           <tr>
                              <th scope="row"></th>
                              <td>Board Representation</td>
                              <td>{{.Investment.BoardRepresentation}}</td>
                           </tr>
                           <tr>
                              <th scope="row"></th>
                              <td>Board Members</td>
                              <td>{{.Investment.BoardMembers}}</td>
                           </tr>
                        </tbody>
                     </table>
                  </div>
                  </p>
               </div>
            </div>
            <div class="card text-white bg-secondary mb-3" style="max-width: 100rem;">
               <div class="card-header"></div>
               <div class="card-body">
                  <h5 class="card-title"></h5>
                  <p class="card-text">
                  <div class="table-responsive-md">
                     <table class="table">
                        <tbody>
                           <tr>
                              <th scope="row"></th>
                              <td>Investment Commitment</td>
                              <td>{{.Investment.InvestmentCommittment}}</td>
                           </tr>
                           <tr>
                              <th scope="row"></th>
                              <td>Invested Capital</td>
                              <td>{{.Investment.InvestedCapital}}</td>
                           </tr>
                           <tr>
                              <th scope="row"></th>
                              <td>Realized Proceeds</td>
                              <td>{{.Investment.RealizedProceeds}}</td>
                           </tr>
                           <tr>
                              <th scope="row"></th>
                              <td>Reported Value</td>
                              <td>{{.Investment.ReportedValue}}</td>
                           </tr>
                           <tr>
                              <th scope="row"></th>
                              <td>Investment Multiple</td>
                              <td>{{.Investment.InvestmentMultiple}}</td>
                           </tr>
                           <tr>
                              <th scope="row"></th>
                              <td>Gross IRR(All Security Types)</td>
                              <td>{{.Investment.GrossIRR}}</td>
                           </tr>
                        </tbody>
                     </table>
                  </div>
                  </p>
               </div>
            </div>
         </div>
      </div>
      <div class="card-group">
         <div class="card text-white bg-secondary mb-3" style="max-width: 100rem;">
            <div class="card-header"></div>
            <div class="card-body">
               <h5 class="card-title">INVESTMENT BACKGROUND</h5>
               <p class="card-text">
                  {{.Investment.InvestmentBackground}}
               </p>
            </div>
         </div>
      </div>
      <div class="card-group">
         <div class="card text-white bg-secondary mb-3" style="max-width: 100rem;">
            <div class="card-header"></div>
            <div class="card-body">
               <h5 class="card-title">VALUATION METHODOLOGY</h5>
               <p class="card-text">
                  {{.Investment.ValuationMethodology}}
               </p>
            </div>
         </div>
      </div>
      <div class="card-group">
         <div class="card text-white bg-secondary mb-3" style="max-width: 100rem;">
            <div class="card-header"></div>
            <div class="card-body">
               <h5 class="card-title">RISK ASSESSMENT/UPDATE</h5>
               <p class="card-text">
                  {{.Investment.RiskAssessment}}
               </p>
            </div>
         </div>
      </div>
      <div class="card-group">
         <div class="card text-white bg-primary mb-3" style="max-width: 100rem;">
            <div class="card-header"></div>
            <div class="card-body">
               <h5 class="card-title">INVESTMENT THESIS</h5>
               <p class="card-text">
               <div class="table-responsive-md">
                  <table class="table">
                     <tbody>
                        <tr>
                           <th scope="row"></th>
                           <td>{{.Investment.InvestmentThesis}}</td>
                        </tr>
                     </tbody>
                  </table>
               </div>
               </p>
            </div>
         </div>
         <div class="card-group">
         <div class="card text-white bg-primary mb-3" style="max-width: 100rem;">
            <div class="card-header"></div>
            <div class="card-body">
               <h5 class="card-title">FINANCIAL RESULTS</h5>
               <p class="card-text">
               <div class="table-responsive-md">
                  <table class="table table-sm table-dark">
                     <thead>
                        <tr>
                           <th scope="col">Reporting Date</th>
                           <th scope="col">Revenue</th>
                           <th scope="col">YOY % Growth</th>
                           <th scope="col">LTM EBITDA</th>
                           <th scope="col">YOY % Growth</th>
                           <th scope="col">EBITDA Margin</th>
                           <th scope="col">Total Exit Value</th>
                           <th scope="col">Total Exit Value Multiple</th>
                           <th scope="col">Total Leverage</th>
                           <th scope="col">Total Leverage Multiple</th>
                        </tr>
                     </thead>
                     <tbody>
                        {{range .Existing }}
                        <tr>
                           <td>{{.ReportingDate}}</td>
                           <td>{{.Revenue}}</td>
                           <td>{{.YoYGrowthPercentage1}}</td>
                           <td>{{.LTMEBITDA}}</td>
                           <td>{{.YoYGrowthPercentage2}}</td>
                           <td>{{.EBITDAMargin}}</td>
                           <td>{{.TotalExitValue}}</td>
                           <td>{{.TotalExitValueMultiple}}</td>
                           <td>{{.TotalLeverage}}</td>
                           <td>{{.TotalLeverageMultiple}}</td>
                        </tr>
                        {{end}}
                     </tbody>
                  </table>
               </div>
               </p>
            </div>
         </div>
      </div>
         <div class="card text-white bg-primary mb-3" style="max-width: 100rem;">
            <div class="card-header"></div>
            <div class="card-body">
               <h5 class="card-title">RECENT EVENTS & KEY INITIATIVES</h5>
               <p class="card-text">
               <div class="table-responsive-md">
                  <table class="table">
                     <tbody>
                        <tr>
                           <th scope="row">Reporting Date</th>
                           <td>News</td>
                        </tr>
                        {{range .ExistingNews}}
                        <tr>
                           <th scope="row">{{.ReportingDate}}</th>
                           <td>{{.News}}</td>
                        </tr>
                        {{end}}
                     </tbody>
                  </table>
               </div>
               </p>
            </div>
         </div>
      </div>
      <div class="card-group">
         <div class="card text-white bg-secondary mb-3" style="max-width: 100rem;">
            <div class="card-header"></div>
            <div class="card-body">
               <h5 class="card-title">
                  INVESTMENT STRUCTURE
               </h5>
               <p class="card-text">
               <div class="table-responsive-md">
                  <table class="table table-sm table-dark">
                     <thead>
                        <tr>
                           <th scope="col">Reporting Date</th>
                           <th scope="col">Investment Structure</th>
                           <th scope="col">Units/Par</th>
                           <th scope="col">Total Invested</th>
                           <th scope="col">Reported Value</th>
                           <th scope="col">Realized Proceeds</th>
                        </tr>
                     </thead>
                     <tbody>
                        {{range .ExistingInvestmentStructures}}
                        <tr>
                           <th scope="row">{{.ReportingDate}}</th>
                           <td>{{.Structure}}</td>
                           <td>{{.Units}}</td>
                           <td>{{.TotalInvested}}</td>
                           <td>{{.ReportedValue}}</td>
                           <td>{{.RealizedProceeds}}</td>
                        </tr>
                        {{end}}
                     </tbody>
                  </table>
               </div>
               </p>
            </div>
         </div>
         <div class="card text-white bg-secondary mb-3" style="max-width: 100rem;">
            <div class="card-header"></div>
            <div class="card-body">
               <h5 class="card-title">
                  CAPITALIZATION STRUCTURE
               </h5>
               <p class="card-text">
               <div class="table-responsive-md">
                  <table class="table table-sm table-dark">
                     <thead>
                        <tr>
                           <th scope="col">Reporting Date</th>
                           <th scope="col">Capitalization</th>
                           <th scope="col">Closing</th>
                           <th scope="col">Year End Value</th>
                        </tr>
                     </thead>
                     <tbody>
                        {{range .ExistingCapitalStructures}}
                        <tr>
                           <th scope="row">{{.ReportingDate}}</th>
                           <td>{{.Capitalization}}</td>
                           <td>{{.ClosingValue}}</td>
                           <td>{{.YearEndValue}}</td>
                        </tr>
                        {{end}}
                     </tbody>
                  </table>
               </div>
               </p>
            </div>
         </div>
      </div>
      </div>
      </div>
