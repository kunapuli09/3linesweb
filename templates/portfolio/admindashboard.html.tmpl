{{define "content"}}
<!-- Fund I-->
<section class="jumbotron text-center">
   <div class="container">
      <h1 class="jumbotron-heading">
         Investments - Capital Distribution
      </h1>
      <a href="/editinvestment?id=0" class="au-btn au-btn-icon au-btn--blue2"><i class="zmdi zmdi-plus"></i>Add New Investment</a>
   </div>
</section>
<!-- DATA TABLE-->
<section class="p-t-20">
   <div class="container">
      <div class="row m-t-25">
            <div class="col-sm-6 col-lg-8">
               <div class="overview-item overview-item--c1">
                  <div class="overview__inner">
                     <div class="overview-box clearfix">
                        <div class="icon">
                           <i class="zmdi zmdi-money"></i>
                        </div>
                        <div class="text">
                           <h2>10,000,000</h2>
                           <span>Current Total Assets Under Management</span>
                        </div>
                     </div>
                     <div class="overview-box clearfix">
                        <div class="icon">
                           <i class="zmdi zmdi-money"></i>
                        </div>
                        <div class="text">
                           <h2>5,000,000</h2>
                           <span>Co-Investment Signups for Next 3 Yrs</span>
                        </div>
                     </div>
                     <div class="overview-box clearfix">
                        <div class="icon">
                           <i class="zmdi zmdi-money"></i>
                        </div>
                        <div class="text">
                           <h2>5,000,000</h2>
                           <span>Venture Debt Signups for Next 3 Yrs</span>
                        </div>
                     </div>
                     <div class="overview-chart">
                        <canvas id="CapitalInvestmentBarChart"></canvas>
                     </div>
                  </div>
               </div>
            </div>
            <div class="col-sm-6 col-lg-4">
               <div class="overview-item overview-item--c2">
                  <div class="overview__inner">
                     <div class="overview-box clearfix">
                        <div class="icon">
                           <i class="zmdi zmdi-money"></i>
                        </div>
                        <div class="text">
                           <h2>6,500,000</h2>
                           <span>Fund II + SPVs</span>
                        </div>
                     </div>
                     <div class="overview-box clearfix">
                        <div class="icon">
                           <i class="zmdi zmdi-money"></i>
                        </div>
                        <div class="text">
                           <h2>3,500,000</h2>
                           <span>Fund I + SPVs</span>
                        </div>
                     </div>
                     <div class="overview-box clearfix">
                        <div class="icon">
                           <i class="zmdi zmdi-money"></i>
                        </div>
                        <div class="text">
                           <h2>10,000,000</h2>
                           <span>Indication of Interests for Next 3 Yrs</span>
                        </div>
                     </div>
                     <div class="overview-box clearfix">
                        <div class="icon">
                           <i class="zmdi zmdi-money"></i>
                        </div>
                        <div class="text">
                           <h2>58,000</h2>
                           <span>Overwatch ID Exit</span>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <div class="row">
         <div class="col-md-12">
            <h3 class="title-5 m-b-35">Admin View</h3>
            {{if .Investments}}
            <div class="table-responsive table-responsive-data2 table-hover">
               <table class="table table-data2">
                  <thead>
                     <tr>
                        <th>Company Name</th>
                        <th>Status</th>
                        <th>Current Value</th>
                        <th>Invested Capital</th>
                        <th>Investment Multiple</th>
                        <th>Gross IRR</th>
                        <th>Investment Date</th>
                     </tr>
                  </thead>
                  <tbody>
                     {{range .Investments }}
                      <tr id="{{.ID}}" class="tr-shadow">
                        <td>{{.StartupName}}</td>
                        <td>
                           {{ if eq "PERFORMANCE_BELOW_TARGET" .Status }}
                           <span class="item" data-toggle="tooltip" data-placement="top" title="Performance Below Target"><i class="fa fa-circle" style="font-size:48px;color:#ffc107"></i>
                           {{ end }}
                           {{ if eq "PERFORMANCE_ON_TARGET" .Status }}
                           <span class="item" data-toggle="tooltip" data-placement="top" title="Performance On Target"><i class="fa fa-circle" style="font-size:48px;color:#6c757d"></i>
                           {{ end }}
                           {{ if eq "PERFORMANCE_ABOVE_TARGET" .Status }}
                           <span class="item" data-toggle="tooltip" data-placement="top" title="Performance Above Target"><i class="fa fa-circle" style="font-size:48px;color:#28a745"></i>
                           {{ end }}
                           {{ if eq "POOR_PERFORMANCE" .Status }}
                           <span class="item" data-toggle="tooltip" data-placement="top" title="Poor Performance"><i class="fa fa-circle" style="font-size:48px;color:#dc3545"></i>
                           {{ end }}
                           {{ if eq "ACQUIRED_OR_SOLD" .Status }}
                           <span class="item" data-toggle="tooltip" data-placement="top" title="Acquired Or Sold"><i class="fa fa-circle" style="font-size:48px;color:#17a2b8"></i>
                           {{ end }}
                        </td>
                        <td class="desc">{{.ReportedValue | currencyFormat }}</td>
                        <td>{{.InvestedCapital | currencyFormat}}</td>
                        <td>{{.InvestmentMultiple }}X</td>
                        <td>{{.GrossIRR }}% </td>
                        <td>{{.FormattedInvestmentDate }} </td>
                     </tr>
                     <tr class="spacer"></tr>
                     {{end}}
                  </tbody>
               </table>
            </div>
            {{end}}
         </div>
      </div>
   </div>
</section>
<!-- END DATA TABLE-->
{{end}}