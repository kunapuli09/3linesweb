{{define "content"}}
<div class="container">
   <div class="text-center">
      <h3><i class="fa fa-bell fa-4x"></i></h3>
      <h2 class="text-center">Notifications</h2>
      <p>Please check latest notification messages</p>
   </div>
   {{if .Existing}}
   <table class="table table-hover">
      <tbody>
        <thead>
            <tr>
             <td>StartupName</td>
             <td>Title</td>
             <td>Publish Date</td>
            </tr>
          </thead>
         {{range .Existing }}
         <tr id="{{.ID}}" class="js-clickable">
            <td>{{ .StartupName }}</td>
            <td>{{ .Title }}</td>
            <td>
               {{.FormattedNewsDate}}
            </td>
         </tr>
         {{end}}
      </tbody>
   </table>
   {{end}}
</div>
{{end}}