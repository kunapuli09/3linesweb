{{define "content"}}
<section class="bg-light" id="news">
   <!-- MAIN CONTENT-->
   <div class="main-content">
      <div class="section__content section__content--p30">
         <div class="container-fluid">
            <div class="row">
          <!-- <div class="col-lg-6 text-center">
            <h2 class="section-heading text-uppercase">Search Applications</h2>
          </div> -->
        </div>
            <div class="row">
               <div class="col-md-12">
                  <form class="form-signup-login form-signup" method="post" action="/searchAppl">
                  <!-- <div class="col-md-4">
                     <div class="form-group">
                        <input name="CompanyName" type="text" class="form-control" placeholder="Search by a Startup Name, Ex: Smiley" value=""/>
                     </div>
                     <div class="form-group">
                       <input name="Location" type="text" class="form-control" placeholder="Search by a Location,  Ex: Den" value=""  autofocus/>
                       </div>
                  </div> -->
                     <div class="col-md-8">
                     <label for="Status"><span><h2>Select One or More Application Statuses</h2><span></label>
                              <select class="form-control" id="Status" name="Status" multiple>
                                 <option value="Initial Review Pending By DSC">Initial Review Pending By DSC</option>
                                 <option value="Initial Meeting Scheduled By DSC">Initial Meeting Scheduled By DSC</option>
                                 <option value="Deal is Not a Fit, Archived By DSC">Deal is Not a Fit, Archived by DSC</option>
                                 <option value="Deal is Early For Us, Archived By DSC">Deal is Early For Us, Archived By DSC</option>
                                 <option value="Deal is Not Ready, Tracked By DSC">Deal is Not Ready, Tracked By DSC</option>
                                 <option value="Deal is Ready, GP Followup Recommended">Deal is Ready, GP Followup Recommended</option>
                                 <option value="Bypassed DSC, Fast Tracked By GPs and Initial Call Scheduled">Bypassed DSC, Fast Tracked By GPs and Initial Call Scheduled</option>
                                 <option value="GPs Initial Review Found Deal is Not Ready, Archived By GPs">GPs Initial Review Found Deal is Not Ready, Archived By GPs</option>
                                 <option value="GPs Found Deal Limitations, Tracking">GPs Found Deal Limitations, Tracking</option>
                                 <option value="Accepted into Due Diligence By GPs">Accepted into Due Diligence By GPs</option>
                                 <option value="Due Diligence Found Deal Limitations, Archived By GPs"> Due Diligence Found Deal Limitations, Archived By GPs</option>
                                 <option value="Investment Recommended By GPs">Investment Recommended By GPs</option>
                                 <option value="Investment Completed By GPs">Investment Completed By GPs</option>
                              </select>
                           </div>
                     </div>
                        <button class="au-btn au-btn-icon au-btn--blue2" type="submit">Search</button>
                        <a href="/entryaccess" class="au-btn au-btn-icon au-btn--blue2" role="button">Cancel</a>
                     </div>
                  </form>
                  </div>
               </div>
               <div class="col-lg-12">
                  
                  <h2 class="title-1 m-b-25">Applications</h2>
                  <div class="table-responsive table--no-card m-b-40">
                     <table id="deals" class="table table-hover">
                        <thead>
                           <tr>
                              <th scope="row">ID</th>
                              <th>Application Date</th>
                              <th>Location</th>
                              <th>Website</th>
                              <th>Referrer</th>
                              <th>Founder Name</th>
                              <th>Startup Name</th>
                           </tr>
                        </thead>
                        <tbody>
                           {{range .Existing }}
                           <tr id="{{.ID}}" class="detail">
                              <th scope="row"><i class="zmdi zmdi-eye"></i></th>
                              <td>{{.FormattedApplicationDate}}</td>
                              <th>{{ .Locations }}</th>
                              <td>{{ .Website }}</td>
                              <td>{{ .Referrer}}</td>
                              <td>{{ .FirstName }} {{ .LastName }}</td>
                              <td>{{ .CompanyName }}</td>
                           </tr>
                           {{end}}
                        </tbody>
                     </table>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
   </div>
   <!-- END MAIN CONTENT-->
</section>
{{end}}