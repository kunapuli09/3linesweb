{{define "content"}}
<section class="bg-light" id="viewinvestment">
   <!-- MAIN CONTENT-->
   <div class="main-content">
      <div class="section__content section__content--p30">
         <div class="container-fluid">
            <div class="row">
               <form class="form-signup-login form-investment" method="post" action="/add">
               <div class="col-lg-12 text-center">
                  <h2 class="section-heading text-uppercase">{{.Investment.StartupName}} Investment Dashboard <a href="/entryaccess" class="btn btn-md btn-info"><i class="zmdi zmdi-view-list-alt"></i>Back To Dashboard</a> </h2>
               </div>
            </div>
            <div class="row">
               <div class="col-md-12">
                  {{if .CurrentUser.Admin }}
                  <div class="dropdown">
                     <button class="btn btn-md btn-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                     Investment Administration Actions
                     </button>
                     <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="/assessments?Investment_ID={{.Investment.ID}}" role="button"> Update Assessment</a>
                        <a class="dropdown-item" href="/editinvestment?id={{.Investment.ID}}" role="button"> Update Investment</a>
                        <a class="dropdown-item" href="/newinvestmentstructure?Investment_ID={{.Investment.ID}}&id=0" role="button"> Update Investment Structure</a>
                        <a class="dropdown-item" href="/newcapitalstructure?Investment_ID={{.Investment.ID}}" role="button"> Update Capital Structure</a>
                        <a class="dropdown-item" href="/newfinancials?Investment_ID={{.Investment.ID}}" role="button"> Update Financial Results</a>
                        <a class="dropdown-item" href="/news?Investment_ID={{.Investment.ID}}" role="button">Update News</a>
                        <a class="dropdown-item" href="/investmentDocs?Investment_ID={{.Investment.ID}}" role="button">Upload Docs</a>
                     </div>
                  </div>
                  {{end}}
                  <div class="form-group" id="Industries">
                     <div class="row m-t-25">
                        <div class="col-sm-6 col-lg-3">
                           <div class="overview-item overview-item--c4">
                              <div clFass="overview__inner">
                                 <div class="overview-box clearfix">
                                    <div class="icon">
                                       <i class="zmdi zmdi-spinner"></i>
                                    </div>
                                    <div class="text">
                                       <h2>{{.Assessment.Status}}</h2>
                                       <div style="word-break: break-all;">
                                          <span>3Lines Rating<span>
                                       </div>
                                    </div>
                                 </div>
                              </div>
                           </div>
                        </div>
                        <div class="col-sm-6 col-lg-3">
                           <div class="overview-item overview-item--c3">
                              <div clFass="overview__inner">
                                 <div class="overview-box clearfix">
                                    <div class="icon">
                                       <i class="zmdi zmdi-spinner"></i>
                                    </div>
                                    <div class="text">
                                       <h2>{{.Assessment.PlaybookAdoption}}%</h2>
                                       <div style="word-break: break-all;">
                                          <span>PlayBook Adoption<span>
                                       </div>
                                    </div>
                                 </div>
                              </div>
                           </div>
                        </div>
                        <div class="col-sm-6 col-lg-3">
                           <div class="overview-item overview-item--c2">
                              <div clFass="overview__inner">
                                 <div class="overview-box clearfix">
                                    <div class="icon">
                                       <i class="zmdi zmdi-money"></i>
                                    </div>
                                    <div class="text">
                                       <h2>{{.Assessment.YearThreeForecastedRevenue | currencyFormat}}M</h2>
                                       <div style="word-break: break-all;">
                                          <span>Forecasted Year-3 Revenue<span>
                                       </div>
                                    </div>
                                 </div>
                              </div>
                           </div>
                        </div>
                        <div class="col-sm-6 col-lg-3">
                           <div class="overview-item overview-item--c1">
                              <div clFass="overview__inner">
                                 <div class="overview-box clearfix">
                                    <div class="icon">
                                       <i class="zmdi zmdi-spinner"></i>
                                    </div>
                                    <div class="text">
                                       <h2>{{.Assessment.YearThreeExitMultiple}}X</h2>
                                       <div style="word-break: break-all;">
                                          <span>Forecasted Exit Multiple<span>
                                       </div>
                                    </div>
                                 </div>
                              </div>
                           </div>
                        </div>
                     </div>
                     <div class="row">
                        <h3 class="title-2">3Lines Management Assessment</h3>
                     </div>
                     {{if .Investment.Description }}
                     <div class="row">
                        <div class="col-lg-12">
                           <div class="au-card recent-report">
                              <div class="au-card-inner">
                                 <h3 class="title-2">Investment Description</h3>
                                 <div class="chart-info">
                                    {{.Investment.Description | safeHTML}}
                                 </div>
                              </div>
                           </div>
                        </div>
                     </div>
                     {{end}}
                     <div class="row">
                     <div class="col-lg-12">
                        <h3 class="title-5 m-b-35">Revenue Dashboard</h3>
                        <div class="table-responsive table--no-card m-b-30">
                           <table class="table table-hover table-borderless table-striped table-earning ">
                              <thead>
                                 <tr>
                                    <th>Enterprise Value at Closing</th>
                                    <th>Fund Ownership</th>
                                    <th>Gross IRR</th>
                                    <th>Investment Multiple</th>
                                    <th>Reported Value</th>
                                 </tr>
                              </thead>
                              <tbody>
                                 <tr id="{{.Investment.ID}}" class="tr-shadow">
                                    <td>{{.Investment.ExitValueAtClosing | currencyFormat}}M</td>
                                    <td>
                                       {{.Investment.FundOwnershipPercentage}}%   
                                    </td>
                                    <td>
                                       {{.Investment.GrossIRR}}%   
                                    </td>
                                    <td>
                                       {{.Investment.InvestmentMultiple}}   
                                    </td>
                                    <td>
                                       {{.Investment.ReportedValue | currencyFormat}}M   
                                    </td>
                                 </tr>
                                 <tr class="spacer"></tr>
                              </tbody>
                           </table>
                        </div>
                     </div>
                  </div>
                  {{if .Existing}}
                  <div class="row">
                     <div class="col-lg-12">
                        <h3 class="title-5 m-b-35">Financials</h3>
                        <div class="table-responsive table--no-card m-b-30">
                           <table class="table table-hover table-borderless table-striped table-earning ">
                              <thead>
                                 <tr>
                                    <th>Reporting Date</th>
                                    <th>Revenue</th>
                                    <th>EBITDA</th>
                                    <th>Year Over Year Growth</th>
                                 </tr>
                              </thead>
                              <tbody>
                                 {{range .Existing }}
                                 <tr id="{{.ID}}" class="tr-shadow">
                                 <td>{{.FormattedReportingDate}}</td>
                                 <td>{{.Revenue | currencyFormat}}M</td>
                                 <td>{{.LTMEBITDA | currencyFormat}}M</td>
                                 <td>{{.YoYGrowthPercentage1}}%</td>
                                 </tr>
                                 {{end}}
                                 <tr class="spacer"></tr>
                              </tbody>
                           </table>
                        </div>
                     </div>
                  </div>
                  {{end}}
                  {{if .ExistingCapitalStructures}}
                  <div class="row">
                     <div class="col-lg-12">
                        <h3 class="title-5 m-b-35">Capital Structures</h3>
                        <div class="table-responsive table--no-card m-b-30">
                           <table class="table table-hover table-borderless table-striped table-earning ">
                              <thead>
                                 <tr>
                                    <th>Reporting Date</th>
                                    <th>Capitalization</th>
                                    <th>Closing</th>
                                    <th>Year End Value</th>
                                 </tr>
                              </thead>
                              <tbody>
                                 {{range .ExistingCapitalStructures}}
                                 <tr id="{{.Investment.ID}}" class="tr-shadow">
                                    <td>{{.FormattedReportingDate}}</td>
                                    <td>
                                       {{.Capitalization}} 
                                    </td>
                                    <td>
                                       {{.ClosingValue | currencyFormat}}M
                                    </td>
                                    <td>
                                       {{.YearEndValue | currencyFormat}}M
                                    </td>
                                 </tr>
                                 {{end}}
                                 <tr class="spacer"></tr>
                              </tbody>
                           </table>
                        </div>
                     </div>
                  </div>
                  {{end}}
                     {{if .Assessment.KeyGrowthEnablers }}
                     <div class="row">
                        <div class="col-lg-12">
                           <div class="au-card recent-report">
                              <div class="au-card-inner">
                                 <h3 class="title-2">Key Growth Enablers</h3>
                                 <div class="chart-info">
                                    {{.Assessment.KeyGrowthEnablers | safeHTML}}
                                 </div>
                              </div>
                           </div>
                        </div>
                     </div>
                     {{end}}
                  </div>
                  {{if .Assessment.RevenueGrowth }}
                  <div class="row">
                     <div class="col-lg-6">
                        <div class="au-card recent-report">
                           <div class="au-card-inner">
                              <h3 class="title-2">Revenue Growth</h3>
                              <div class="chart-info">
                                 {{.Assessment.RevenueGrowth | safeHTML}}
                              </div>
                           </div>
                        </div>
                     </div>
                     {{end}}
                     {{if .Assessment.Execution }}
                     <div class="col-lg-6">
                        <div class="au-card chart-percent-card">
                           <div class="au-card-inner">
                              <h3 class="title-2 tm-b-5">Execution
                              </h3>
                           </div>
                           <div class="chart-info">
                              {{.Assessment.Execution | safeHTML}}
                           </div>
                        </div>
                     </div>
                     {{end}}
                  </div>
                  {{if .Assessment.RevenueBreakEvenPlan }}
                  <div class="row">
                     <div class="col-lg-6">
                        <div class="au-card recent-report">
                           <div class="au-card-inner">
                              <h3 class="title-2">Revenue Breakeven Plan </h3>
                              <div class="chart-info">
                                 {{.Assessment.RevenueBreakEvenPlan | safeHTML}}
                              </div>
                           </div>
                        </div>
                     </div>
                     {{end}}
                     {{if .Assessment.Leadership }}
                     <div class="col-lg-6">
                        <div class="au-card chart-percent-card">
                           <div class="au-card-inner">
                              <h3 class="title-2 tm-b-5">Leadership
                              </h3>
                           </div>
                           <div class="chart-info">
                              {{.Assessment.Leadership | safeHTML}}
                           </div>
                        </div>
                     </div>
                     {{end}}
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
   </div>
</section>
{{end}}