{{define "content"}}
<section class="bg-light" id="editinvestment">
   <div class="container">
      <div class="row">
         <form class="form-signup-login form-investment" method="post" action="/update">
            <input type="hidden" name="id" value="{{ .Investment.ID }}">
            <div class="col-lg-12 text-center">
               <h2 class="section-heading text-uppercase">Update Investment </h2>
            </div>
            <a href="/viewinvestment?id={{.Investment.ID}}" class="btn btn-primary my-2">Back to Dashboard</a>
      </div>
      <div class="row">
      <div class="col-lg-4">
      <div class="form-group">
      <div class="form-group">
      <label for="StartupName">Startup Name</label>
      <input name="StartupName" type="text" class="form-control" placeholder="StartupName" value="{{ .Investment.StartupName }}" readonly>
      </div>
      <div class="form-group">
      <label for="Team">Team</label>
      <input name="Team" type="text" class="form-control" placeholder="Team" value="{{ .Investment.Team }}" autofocus>
      </div>
      </div> 
      </div> 
      <div class="col-lg-4">
      <div class="form-group">
      <div class="form-group">
      <label for="Website">Website</label>
      <input name="Website" type="text" class="form-control" placeholder="Website" value="{{ .Investment.Website }}"  autofocus>
      </div>
      <div class="form-group">
      <label for="LogoPath">Logo Name/Path</label>
      <input name="LogoPath" type="text" class="form-control" placeholder="LogoPath" value="{{ .Investment.LogoPath }}" autofocus>
      </div>
      </div> 
      </div>   
      </div>
      <div class="row">
      <div class="col-lg-12">
      <div class="form-group">
      <textarea id="udescription" name="Description">{{ .Investment.Description | safeHTML }}</textarea>
      </div> 
      </div>   
      </div>
      <div class="row">
      <div class="col-lg-4">
      <div class="form-group">
      <label for="Industry">Industry</label>
      <input name="Industry" type="text" class="form-control" placeholder="Industry" value="{{ .Investment.Industry }}" autofocus>
      </div>
      <label for="InvestmentDate">Investment Date</label>
      <div class="input-group date" data-provide="datepicker-inline">
      <input type="text" id="InvestmentDate" name="InvestmentDate" value="{{.Investment.FormattedInvestmentDate}}" class="form-control">
      <div class="input-group-addon">
      <span class="glyphicon glyphicon-th"></span>
      </div>
      </div>
      <div class="form-group">
      <label for="Headquarters">Headquarters</label>
      <input name="Headquarters" type="text" class="form-control" placeholder="Headquarters" value="{{ .Investment.Headquarters }}"  autofocus>
      </div>
      <div class="form-group">
      <label for="CapTable">Cap Table</label>
      <input name="CapTable" type="text" class="form-control" placeholder="CapTable" value="{{ .Investment.CapTable }}"  autofocus>
      </div>
      <div class="form-group">
      <label for="BoardRepresentation">Board Representation</label>
      <input name="BoardRepresentation" type="text" class="form-control" placeholder=" 0 of 3" value="{{ .Investment.BoardRepresentation }}"  autofocus>
      </div>
      <div class="form-group">
      <label for="BoardMembers">Board Members</label>
      <input name="BoardMembers" type="text" class="form-control" placeholder="eg: Peter, Krishna" value="{{ .Investment.BoardMembers }}"  autofocus>
      </div>
      </div>
      <div class="col-lg-4">
      <div class="form-group">
      <label for="ExitValueAtClosing">Exit Value At Closing</label>
      <input name="ExitValueAtClosing" type="number" min="0.00" step="0.01" class="form-control" placeholder="ExitValueAtClosing" value="{{ .Investment.ExitValueAtClosing }}"  autofocus>
      </div>
      <div class="form-group">
      <label for="FundOwnershipPercentage">Fund Ownership %</label>
      <input name="FundOwnershipPercentage" type="number" min="0.00" step="0.01" class="form-control" placeholder="1%" value="{{ .Investment.FundOwnershipPercentage }}"  autofocus>
      </div>
      <div class="form-group">
      <label for="InvestorGroupPercentage">Investor Group %</label>
      <input name="InvestorGroupPercentage" type="number" min="0.00" step="0.01" class="form-control" placeholder="18%" value="{{ .Investment.InvestorGroupPercentage }}"  autofocus>
      </div> 
      <div class="form-group">
      <label for="ManagementOwnership">Management Ownership %</label>
      <input name="ManagementOwnership" type="number" min="0.00" step="0.01" class="form-control" placeholder="20%" value="{{ .Investment.ManagementOwnership }}"  autofocus>
      </div>
      <div class="form-group">
      <label for="InvestmentCommittment">Investment Committment</label>
      <input name="InvestmentCommittment" type="number" min="0.00" step="0.01" class="form-control" placeholder="$50,0000" value="{{ .Investment.InvestmentCommittment }}"  autofocus>
      </div>
      <div class="form-group">
      <label for="InvestedCapital">Invested Capital</label>
      <input name="InvestedCapital" type="number" min="0.00" step="0.01" class="form-control" placeholder="$50,0000" value="{{ .Investment.InvestedCapital }}"  autofocus>
      </div>
      </div>
      <div class="col-lg-4">
      <div class="form-group">
      <label for="RealizedProceeds">Realized Proceeds</label>
      <input name="RealizedProceeds" type="number" min="0.00" step="0.01" class="form-control" placeholder="0" value="{{ .Investment.RealizedProceeds }}"  autofocus>
      </div>
      <div class="form-group">
      <label for="ReportedValue">Reported Value</label>
      <input name="ReportedValue" type="number" min="0.00" step="0.01" class="form-control" placeholder="$65000" value="{{ .Investment.ReportedValue }}"  autofocus>
      </div>
      <div class="form-group">
      <label for="InvestmentMultiple">Investment Multiple ( number of times)</label>
      <input name="InvestmentMultiple" type="number" min="0.00" step="0.01" class="form-control" placeholder="1.2" value="{{ .Investment.InvestmentMultiple }}"  autofocus>
      </div>
      <div class="form-group">
      <label for="GrossIRR">Gross Internal Rate of Return (tool tip, link chart)</label>
      <input name="GrossIRR" type="number" min="0.00" step="0.01" class="form-control" placeholder="60%" value="{{ .Investment.GrossIRR }}"  autofocus>
      </div>
      <div class="form-group">
           <label for="Status">Status</label>
           <select class="form-control" id="Status" name="Status">
             <option value="PENDING">Pending</option>
             <option value="COMPLETE">Complete</option>
            </select>
      </div>
      </div>
      </div>
      <div class="row">
      <div class="col-lg-12">
      <div class="form-group">
      <textarea id="uinvestmentbackground" name="InvestmentBackground">{{.Investment.InvestmentBackground | safeHTML}}</textarea>
      </div> 
      </div>   
      </div>
      <div class="row">
      <div class="col-lg-12">
      <div class="form-group">
      <textarea id="uinvestmentthesis" name="InvestmentThesis">{{.Investment.InvestmentThesis | safeHTML }}</textarea>
      </div>
      </div>
      </div>
      <div class="row">
      <div class="col-lg-12">
      <div class="form-group">
      <textarea id="uvaluationmethodology" name="ValuationMethodology">{{.Investment.ValuationMethodology | safeHTML}}</textarea>
      </div> 
      </div>   
      </div>
      <div class="row">
      <div class="col-lg-12">
      <div class="form-group">
      <textarea id="uriskassessment" name="RiskAssessment">{{.Investment.RiskAssessment | safeHTML }}</textarea>
      </div> 
      </div>   
      </div>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Update</button>
      <a href="/viewinvestment?id={{.Investment.ID}}" class="other-form text-center">Back to Dashboard</a>
      </form>
   </div>
</section>
{{end}}