{{define "content"}}
<section class="bg-light" id="news">
   <!-- MAIN CONTENT-->
   <div class="main-content">
      <div class="section__content section__content--p30">
         <div class="container-fluid">
            <div class="row">
          <div class="col-lg-6 text-center">
            <h2 class="section-heading text-uppercase">Search Applications</h2>
          </div>
        </div>
            <div class="row">
               <div class="col-md-12">
                  <form class="form-signup-login form-signup" method="post" action="/searchAppl">
                  <div class="col-md-4">
                     <div class="form-group">
                        <input name="CompanyName" type="text" class="form-control" placeholder="Search by a Startup Name, Ex: Smiley" value=""/>
                     </div>
                     <div class="form-group">
                       <input name="Location" type="text" class="form-control" placeholder="Search by a Location,  Ex: Den" value=""  autofocus/>
                       </div>
                  </div>
                     <div class="col-md-8">
                      
                          
                       <div class="form-check form-check-inline">
                     <input type="checkbox" name="Status" value="RECOMMEND">Recommended</input>
                     
                     </div>
                     <div class="form-check form-check-inline">
                     <input type="checkbox" name="Status" value="TRACK">Tracking</input>
                     </div>
                     <div class="form-check form-check-inline">
                     <input type="checkbox" name="Status" value="ARCHIVE">Archived</input>
                     </div>
                     <div class="form-check form-check-inline">
                     <input type="checkbox" name="Status" value="FASTTRACK">Fast Track</input>
                     </div>
                        <button class="au-btn au-btn-icon au-btn--blue2" type="submit">Search</button>
                        <a href="/entryaccess" class="au-btn au-btn-icon au-btn--blue2" role="button">Cancel</a>
                     </div>
                  </form>
                  </div>
               </div>
               <div class="col-lg-12">
                  
                  <h2 class="title-1 m-b-25">Applications</h2>
                  <div class="table-responsive table--no-card m-b-40">
                     <table class="table table-hover">
                        <thead>
                           <tr>
                              <th scope="row">ID</th>
                              <th>Application Date</th>
                              <th>Startup Name</th>
                              <th>Founder Name</th>
                              <th>Email</th>
                              <th>Phone</th>
                              <th>Referrer</th>
                           </tr>
                        </thead>
                        <tbody>
                           {{range .Existing }}
                           <tr id="{{.ID}}" class="detail">
                              <th scope="row"><i class="zmdi zmdi-eye"></i></th>
                              <td>{{.FormattedApplicationDate}}</td>
                              <td>{{ .CompanyName }}</td>
                              <td>{{ .FirstName }} {{ .LastName }}</td>
                              <td>{{ .Email }}</td>
                              <td>{{ .Phone }}</td>
                              <td>{{ .Referrer}}</td>
                           </tr>
                           {{end}}
                        </tbody>
                     </table>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
   </div>
   <!-- END MAIN CONTENT-->
</section>
{{end}}