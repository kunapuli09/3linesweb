{{define "content"}}
<section class="bg-light" id="newfinancials">
   <div class="container">
    <a href="/viewinvestment?id={{.Investment.ID}}" class="au-btn au-btn-icon au-btn--blue2">Back to Investment</a>
      <div class="row">
         <div class="col-lg-8 text-center">
            <h3 class="section-heading text-uppercase">Edit Financials for {{.Investment.StartupName}} </h3>
         </div>
      </div>
      <div class="row">
         <div class="col-lg-4">
            <form class="form-signup-login form-investment" method="post" action="/updatefinancials">
               <input type="hidden" name="id" id="id" value="{{.FinancialResults.ID}}">
               <input type="hidden" name="Investment_ID" id="Investment_ID" value="{{.Investment.ID}}">
               <label for="ReportingDate">Reporting Date</label>
               <div class="input-group date" data-provide="datepicker-inline">
                  <input type="text" id="ReportingDate" name="ReportingDate" value="{{ .FinancialResults.ReportingDate }}" class="form-control" required autofocus>
                  <div class="input-group-addon">
                  <i class="fa fa-calendar" aria-hidden="true"></i><span class="glyphicon glyphicon-th"></span>
                  </div>
               </div>
               <div class="form-group">
                  <label for="Revenue">Revenue</label>
                  <input name="Revenue" type="number" min="-100000000.00" step="0.01" class="form-control" placeholder="$50,000,000" value="{{ .FinancialResults.Revenue }}"  required >
               </div>
               <div class="form-group">
                  <label for="LTMEBITDA">EBITDA</label>
                  <input type="number" min="-100000000.00" step="0.01" class="form-control" name="LTMEBITDA" id="LTMEBITDA" placeholder="$50,000,000" value="{{ .FinancialResults.LTMEBITDA }}">
               </div>
               <div class="form-group">
                  <label for="YoYGrowthPercentage1">Year over Year Growth (%)</label>
                  <input name="YoYGrowthPercentage1" type="number" min="0.00" step="0.01" class="form-control" placeholder="100%" value="{{ .FinancialResults.YoYGrowthPercentage1 }}" autofocus>
               </div>
               
               <div class="form-group">
                  <label for="YoYGrowthPercentage2">Year over Year Growth TBD (%)</label>
                  <input name="YoYGrowthPercentage2" type="number" min="0.00" step="0.01" class="form-control" placeholder="100%" value="{{ .FinancialResults.YoYGrowthPercentage2 }}"  autofocus>
               </div>
               <div class="form-group">
                  <label for="EBITDAMargin">Earnings Before Interest, Taxes, Depreciation, and Amortization Margin</label>
                  <input name="EBITDAMargin" type="number" min="-100000000.00" step="0.01" class="form-control" placeholder="13%" value="{{ .FinancialResults.EBITDAMargin }}"  autofocus>
               </div>
         </div>
         <div class="col-lg-4">

         <div class="form-group">
              <label for="StartupName">Select Assessment:</label>
              <select class="form-control" id="Assessment" name="Assessment">
               <option value="PERFORMANCE_BELOW_TARGET" {{ if eq "PERFORMANCE_BELOW_TARGET" .FinancialResults.Assessment }}selected="selected"{{ end }}>Performance Below Target</option>
               <option value="PERFORMANCE_ON_TARGET" {{ if eq "PERFORMANCE_BELOW_TARGET" .FinancialResults.Assessment }}selected="selected"{{ end }}>Performance On Target</option>
               <option value="PERFORMANCE_ABOVE_TARGET" {{ if eq "PERFORMANCE_ABOVE_TARGET" .FinancialResults.Assessment }}selected="selected"{{ end }}>Performance Above Target</option>
               <option value="POOR_PERFORMANCE" {{ if eq "POOR_PERFORMANCE" .FinancialResults.Assessment }}selected="selected"{{ end }}>Poor Performance</option>
               </select>
         </div>
         <div class="form-group">
         <label for="TotalExitValue">Total Enterprise Value</label>
         <input name="TotalExitValue" type="number" min="-100000000.00" step="0.01" class="form-control" placeholder="$50,000,000" value="{{ .FinancialResults.TotalExitValue }}"  autofocus>
         </div>
         <div class="form-group">
         <label for="TotalExitValueMultiple">Total Enterprise Value Multiple</label>
         <input name="TotalExitValueMultiple" type="number" min="-100000000.00" step="0.01" class="form-control" placeholder="1.2x" value="{{ .FinancialResults.TotalExitValueMultiple }}"  autofocus>
         </div>
         <div class="form-group">
         <label for="TotalLeverage">Total Leverage (%)</label>
         <input name="TotalLeverage" type="number" min="-100000000.00" step="0.01" class="form-control" placeholder="18%" value="{{ .FinancialResults.TotalLeverage }}"  autofocus>
         </div> 
         <div class="form-group">
         <label for="TotalLeverageMultiple">Total Leverage Multiple</label>
         <input name="TotalLeverageMultiple" type="number" min="-100000000.00" step="0.01" class="form-control" placeholder="1.2x" value="{{ .FinancialResults.TotalLeverageMultiple }}"  autofocus>
         </div>
         
      </div>
    </div>
      <div class="row">
      <div class="col-lg-6">
        <button class="au-btn au-btn-icon au-btn--blue2" type="submit">Update</button>
      </div>
  </div>
      </form>
   </div>
</section>
{{end}}