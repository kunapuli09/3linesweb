<!-- DATA TABLE-->
<section class="p-t-20">
   <div class="container">
      <div class="row">
         <div class="col-md-12">
          <h3 class="title-5 m-b-35">Investor Portfolio</h3>
            <!-- <h3 class="title-5 m-b-35">Performance Indicators:<i class="fa fa-circle" style="font-size:24px;color:#ffc107"></i>Below Target  <i class="fa fa-circle" style="font-size:24px;color:#6c757d"></i>On Target <i class="fa fa-circle" style="font-size:24px;color:#28a745"></i>Above Target <i class="fa fa-circle" style="font-size:24px;color:#dc3545"></i>Poor<i class="fa fa-circle" style="font-size:24px;color:#17a2b8"></i>Acquired Or Sold</h3> -->
            {{if .Investments}}
            <div class="table-responsive table-responsive-data2">
               <table class="table table-data2">
                  <thead>
                     <tr>
                        <th>Company Name</th>
                        <th>Fund Legal Name</th>
                        <th>Invested Capital</th>
                        <th>Current Value</th>
                        <th>Realized Proceeds</th>
                        <th>Unrealized IRR</th>
                        <th>Status</th>
                     </tr>
                  </thead>
                  <tbody>
                     {{range .Investments }}
                      <tr id="{{.ID}}" class="tr-shadow">
                        <td>{{.StartupName}}</td>
                        <td>{{.FundLegalName}}</td>
                        <td>
                           {{.InvestedCapital | currencyFormat}}
                        </td>
                        <td class="desc">{{.ReportedValue | currencyFormat }}</td>
                        <td>{{.RealizedProceeds | currencyFormat}}</td>
                        <td>{{.GrossIRR}}%</td>
                        <td>
                           {{ if eq "PERFORMANCE_BELOW_TARGET" .Status }}
                           <button class="item" data-toggle="tooltip" data-placement="top" title="Performance Below Target"><i class="fa fa-circle" style="font-size:48px;color:#ffc107"></i>
                           {{ end }}
                           {{ if eq "PERFORMANCE_ON_TARGET" .Status }}
                           <button class="item" data-toggle="tooltip" data-placement="top" title="Performance On Target"><i class="fa fa-circle" style="font-size:48px;color:#6c757d"></i>
                           {{ end }}
                           {{ if eq "PERFORMANCE_ABOVE_TARGET" .Status }}
                           <button class="item" data-toggle="tooltip" data-placement="top" title="Performance Above Target"><i class="fa fa-circle" style="font-size:48px;color:#28a745"></i>
                           {{ end }}
                           {{ if eq "POOR_PERFORMANCE" .Status }}
                           <button class="item" data-toggle="tooltip" data-placement="top" title="Poor Performance"><i class="fa fa-circle" style="font-size:48px;color:#dc3545"></i>
                           {{ end }}
                           {{ if eq "ACQUIRED_OR_SOLD" .Status }}
                           <button class="item" data-toggle="tooltip" data-placement="top" title="Acquired Or Sold"><i class="fa fa-circle" style="font-size:48px;color:#17a2b8"></i>
                           {{ end }}
                        </td>
                     </tr>
                     <tr class="spacer"></tr>
                     {{end}}
                  </tbody>
               </table>
            </div>
            {{end}}
         </div>
      </div>
   </div>
</section>
