{{define "content"}}
<section class="bg-light" id="newfinancials">
   <div class="container">
    <a href="/viewinvestment?id={{.Investment.ID}}" class="btn btn-primary my-2">Back to Dashboard</a>
      <div class="row">
         <div class="col-lg-8 text-center">
            <h3 class="section-heading text-uppercase">Add Financials for {{.Investment.StartupName}} </h3>
         </div>
         <table class="table">
          <tbody>
            {{range .Existing }}
            <tr>
             <th scope="row">{{.ID}}</th>
             <td>{{.FormattedReportingDate}}</td>
             <td>{{.Revenue }}</td>
             <td>{{.Assessment}}</td>
             <td><a class="btn btn-sm btn-outline-danger" href="/removefinancialresults?id={{.ID}}&Investment_ID={{ $.Investment.ID }}" role="button"> Remove </a></td>
            </tr>
            {{end}}
          </tbody>
        </table>
      </div>
      <div class="row">
         <div class="col-lg-4">
            <form class="form-signup-login form-investment" method="post" action="/addFinancialResults">
               <input type="hidden" name="Investment_ID" id="Investment_ID" value="{{.Investment.ID}}">
               <div class="form-group">
                  <label for="Revenue">Revenue</label>
                  <input name="Revenue" type="number" min="0.00" step="0.01" class="form-control" placeholder="$50,000,000" value="{{ .FinancialResults.Revenue }}"  required >
               </div>
               <label for="ReportingDate">Reporting Date</label>
               <div class="input-group date" data-provide="datepicker-inline">
                  <input type="text" id="ReportingDate" name="ReportingDate" value="{{ .FinancialResults.ReportingDate}}" class="form-control" required autofocus>
                  <div class="input-group-addon">
                     <span class="glyphicon glyphicon-th"></span>
                  </div>
               </div>
               
               <div class="form-group">
                  <label for="YoYGrowthPercentage1">Year over Year Growth (%)</label>
                  <input name="YoYGrowthPercentage1" type="number" min="0.00" step="0.01" class="form-control" placeholder="100%" value="{{ .FinancialResults.YoYGrowthPercentage1 }}" autofocus>
               </div>
               <div class="form-group">
                  <label for="LTMEBITDA">Last Twelve Months Earnings Before Interest, Taxes, Depreciation, and Amortization</label>
                  <input type="number" min="0.00" step="0.01" class="form-control" name="LTMEBITDA" id="LTMEBITDA" placeholder="$50,000,000" value="{{ .FinancialResults.LTMEBITDA }}">
               </div>
               <div class="form-group">
                  <label for="YoYGrowthPercentage2">Year over Year Growth TBD (%)</label>
                  <input name="YoYGrowthPercentage2" type="number" min="0.00" step="0.01" class="form-control" placeholder="100%" value="{{ .FinancialResults.YoYGrowthPercentage2 }}"  autofocus>
               </div>
               <div class="form-group">
                  <label for="EBITDAMargin">Earnings Before Interest, Taxes, Depreciation, and Amortization Margin</label>
                  <input name="EBITDAMargin" type="number" min="0.00" step="0.01" class="form-control" placeholder="13%" value="{{ .FinancialResults.EBITDAMargin }}"  autofocus>
               </div>
         </div>
         <div class="col-lg-4">

         <div class="form-group">
                 <label for="StartupName">Select Assessment:</label>
                 <select class="form-control" data-style="btn-primary" id="Assessment" name="Assessment">
                   <option value="On Plan">On Plan</option>
                   <option value="Above Plan">Above Plan</option>
                   <option value="Above Plan">Below Plan</option>
                 </select>
         </div>
         <!-- <div class="btn-group btn-group-toggle" data-toggle="buttons">
                  <label class="btn btn-primary" active>
                  <input type="radio" name="Assessment" id="Assessment" autocomplete="off" checked> On Plan
                  </label>
                  <label class="btn btn-success">
                  <input type="radio" name="Assessment" id="Assessment" autocomplete="off">Above Plan
                  </label>
                  <label class="btn btn-danger">
                  <input type="radio" name="Assessment" id="Assessment" autocomplete="off"> Below Plan
                  </label>
               </div> -->
         <div class="form-group">
         <label for="TotalExitValue">Total Enterprise Value</label>
         <input name="TotalExitValue" type="number" min="0.00" step="0.01" class="form-control" placeholder="$50,000,000" value="{{ .FinancialResults.TotalExitValue }}"  autofocus>
         </div>
         <div class="form-group">
         <label for="TotalExitValueMultiple">Total Enterprise Value Multiple</label>
         <input name="TotalExitValueMultiple" type="number" min="0.00" step="0.01" class="form-control" placeholder="1.2x" value="{{ .FinancialResults.TotalExitValueMultiple }}"  autofocus>
         </div>
         <div class="form-group">
         <label for="TotalLeverage">Total Leverage (%)</label>
         <input name="TotalLeverage" type="number" min="0.00" step="0.01" class="form-control" placeholder="18%" value="{{ .FinancialResults.TotalLeverage }}"  autofocus>
         </div> 
         <div class="form-group">
         <label for="TotalLeverageMultiple">Total Leverage Multiple</label>
         <input name="TotalLeverageMultiple" type="number" min="0.00" step="0.01" class="form-control" placeholder="1.2x" value="{{ .FinancialResults.TotalLeverageMultiple }}"  autofocus>
         </div>
         
      </div>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Add</button>
      </form>
   </div>
</section>
{{end}}