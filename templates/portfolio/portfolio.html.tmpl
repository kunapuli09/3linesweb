{{define "content"}}
      {{if .CurrentUser.Admin }}
      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Investment Portfolio</h1>
          <p class="lead text-muted">Access to Investment Reports</p>
          <p>
            <a href="/newinvestment" class="btn btn-primary my-2">Add New Investment</a>
          </p>
        </div>
      </section>
      {{end}}
      <div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
            {{range .Investments }}
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <a onclick='newTab("{{.Website}}")'><img class="card-img-top" src="{{.LogoPath}}" alt="{{.StartupName}}"></a>
                <div class="card-body">
                  <p class="card-text">{{.Description | safeHTML}}</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a class="btn btn-sm btn-info" href="/viewinvestment?id={{.ID}}" role="button">Investor Dashboard</a>
                    </div>
                    <small class="text-muted">{{.Industry}}</small>
                  </div>
                </div>
              </div>
            </div>
            {{end}}
